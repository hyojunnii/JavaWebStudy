<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<!-- namespace = 현재 mapper 파일의 별칭 -->
<mapper namespace="memberMapper">
	<!-- 
		* DML
		<insert|update|delete id="식별자" [parameterType="패키지명.클래스명" || "별칭"]>
			SQL ~~
		</insert|update|delete>
		* DQL (SELECT)
		<select id="식별자" [parameterType="패키지명.클래스명" || "별칭"] 
				resultType="패키지명.클래스명" || "별칭"
				또는
				resultMap="맵식별자">
			SQL ~~
		</select>
	 -->
	 
	<!-- <insert id="join" parameterType="com.kh.member.co.MemberVo"> -->
	<insert id="join" parameterType="mvo">
		INSERT INTO TB_USER (ID, PWD) VALUES (#{id}, #{pwd}) <!-- 필드값 -->
	</insert>
	
	<select id="login" parameterType="mvo" resultType="mvo"> <!-- resultMap="memberResult"-->
		SELECT ID, PWD FROM TB_USER WHERE ID = #{id} AND PWD = #{pwd}
	</select>
	
	
	<!-- 
		<resultMap type="조회결과를 담아줄 객체타입" id="식별자">
			<result column="rs에서 가져올 칼럼명" property="객체의 필드명" />
			<result column="rs에서 가져올 칼럼명" property="객체의 필드명" />
		</resultMap> 
	-->
	
	<resultMap type="mvo" id="memberResult">
		<result column="ID" property="userId" />
		<result column="PWD" property="userPwd" />
	</resultMap>
	
	<!-- 
		ResultSet으로부터 조회된 칼럼값을 객체의 필드에 맵핑해줌
		ResultSet rs = pstmt.executeQuery();
		String id = rs.getString("ID");
		MemberVo loginMember = new MemberVo();
		loginMember.setUserId(id);
	 -->
</mapper>